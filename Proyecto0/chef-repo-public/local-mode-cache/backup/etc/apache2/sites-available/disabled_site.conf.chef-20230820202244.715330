<VirtualHost *:80>
  ServerName 127.0.0.1
  DocumentRoot /var/www/basic_site

  <Directory /var/www/basic_site>
    Options FollowSymLinks
    AllowOverride None
    Require all granted
  </Directory>

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  <Location /server-status>
    SetHandler server-status
    Require local
  </Location>

  LogLevel info
  ErrorLog /var/log/apache2/disabled_site-error.log
  CustomLog /var/log/apache2/disabled_site-access.log combined
</VirtualHost>
